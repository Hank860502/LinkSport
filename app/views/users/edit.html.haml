.section{:class => "edit-page"}
	= form_for @user do |f|
		.row
			%form.col.s12
				.row
					.input-field.col.s6
						%input#first_name.validate{:value => @user.first_name, :type => "text"}/
						%label{:for => "first_name"} First Name
					.input-field.col.s6
						%input#first_name.validate{:value => @user.last_name, :type => "text"}/
						%label{:for => "last_name"} Last Name
				.row
					.input-field.col.s6
						%input#first_name.validate{:value => @user.height, :type => "text"}/
						%label{:for => "height"} Height
					.input-field.col.s6
						%input#first_name.validate{:value => @user.weight, :type => "text"}/
						%label{:for => "weight"} Weight
				.row
					.input-field.col.s4
						%input#first_name.validate{:value => @user.sat, :type => "text"}/
						%label{:for => "sat"} SAT Score
					.input-field.col.s4
						%input#first_name.validate{:value => @user.act, :type => "text"}/
						%label{:for => "act"} ACT Score
					.input-field.col.s4
						%input#first_name.validate{:value => @user.toefl, :type => "text"}/
						%label{:for => "toefl"} TOEFL Score
				.row
					.input-field.col.s4
						%input#first_name.validate{:value => @user.itf, :type => "text"}/
						%label{:for => "itf"} ITF Ranking
					.input-field.col.s4
						%input#first_name.validate{:value => @user.utr, :type => "text"}/
						%label{:for => "utr"} Universal Tennis Rating
					.input-field.col.s4
						%input#first_name.validate{:value => @user.ntr, :type => "text"}/
						%label{:for => "ntr"} National Ranking
				.row
					.input-field.col.s12
						%input#disabled.validate{:disabled => "disabled", :type => "text", :value => "I am not editable"}/
						%label{:for => "disabled"} Disabled
				.row
					.input-field.col.s6
						%input#first_name.validate{:placeholder => "Placeholder", :type => "text"}/
						%label{:for => "first_name"} First Name
				.row
					.input-field.col.s3
						%input#righthanded.with-gap{:name => "group1", :value => true, :type => "radio"}/
						%label{:for => "righthanded", :value => "true"} 右手持拍
						%input#lefthanded.with-gap{:name => "group1", :value => false, :type => "radio"}/
						%label{:for => "lefthanded", :value => "false"} 左手持拍
					.input-field.col.s3
						%input#test3.with-gap{:name => "group2", :type => "radio"}/
						%label{:for => "test3"} 雙手反拍
						%input#test4.with-gap{:name => "group2", :type => "radio"}/
						%label{:for => "test4"} 單手反拍
			%a.waves-effect.waves-light.btn.col.s6.center-align
				= f.submit
	
